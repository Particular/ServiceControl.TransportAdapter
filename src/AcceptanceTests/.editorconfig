[*.cs]

# Justification: Test project
dotnet_diagnostic.CA2007.severity = none

# PS0018: A task-returning method should have a CancellationToken parameter unless it has a parameter implementing ICancellableContext
dotnet_diagnostic.PS0018.severity = suggestion

# PS0003: A parameter of type CancellationToken on a non-private delegate or method should be optional
dotnet_diagnostic.PS0003.severity = suggestion

# PS0008: CancellationToken parameters should be named cancellationToken or have names ending with CancellationToken
dotnet_diagnostic.PS0008.severity = suggestion

# PS0017: Single, non-private CancellationToken parameters should be named cancellationToken
dotnet_diagnostic.PS0017.severity = suggestion

# PS0013: A Func used as a method parameter with a Task, ValueTask, or ValueTask<T> return type argument should have at least one CancellationToken parameter type argument unless it has a parameter type argument implementing ICancellableContext
dotnet_diagnostic.PS0013.severity = suggestion
